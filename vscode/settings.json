{
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "svelte.enable-ts-plugin": true,
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "go.toolsManagement.autoUpdate": true,

  "emmet.showSuggestionsAsSnippets": true,
  "emmet.showAbbreviationSuggestions": true,
  "emmet.showExpandedAbbreviation": "always",
  "emmet.includeLanguages": {
    "vue-html": "html",
    "vue": "html"
  },

  "notebook.formatOnSave.enabled": true,
  "notebook.lineNumbers": "on",

  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.experimental.configFile": null,
  "tailwindCSS.includeLanguages": {
    "plaintext": "javascript"
  },

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.accessibilitySupport": "off",
  "editor.tabSize": 4,
  "editor.lineNumbers": "relative",
  "editor.mouseWheelZoom": true,
  "editor.cursorSurroundingLines": 10,
  "editor.renderLineHighlight": "all",
  "editor.minimap.enabled": false,
  "editor.inlineSuggest.enabled": true,
  "editor.fontFamily": "'JetBrainsMono Nerd Font', 'Droid Sans Mono', 'monospace', monospace",

  "vim.leader": "<space>",
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.highlightedyank.enable": true,
  "vim.handleKeys": {
    "<C-c>": false,
    "q": false
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<Esc>"], "commands": [":nohl"] },
    { "before": ["<C-p>"], "commands": [":bprevious"] },
    { "before": ["<C-n>"], "commands": [":bnext"] },

    { "before": ["leader", "v"], "commands": [":vsplit"] },

    {
      "before": ["<C-d>"],
      "after": ["<C-d>", "z", "z"]
    },

    {
      "before": ["<C-u>"],
      "after": ["<C-u>", "z", "z"]
    },

    {
      "before": ["n"],
      "after": ["n", "z", "z"]
    },

    {
      "before": ["N"],
      "after": ["N", "z", "z"]
    },

    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.focusRightGroup"]
    },

    {
      "before": ["<S-k>"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<S-j>"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },

    { "before": ["leader", "w"], "commands": [":w!"] },
    { "before": ["leader", "q"], "commands": [":q!"] },
    { "before": ["leader", "x"], "commands": [":x!"] },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["leader", "s", "e"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["leader", "s", "f"],
      "commands": ["find-it-faster.findFiles"]
    },
    {
      "before": ["leader", "s", "g"],
      "commands": ["find-it-faster.findWithinFiles"]
    },
    {
      "before": ["leader", "s", "s"],
      "commands": ["workbench.action.gotoSymbol"]
    },
    {
      "before": ["leader", "s", "p"],
      "commands": ["projectManager.listGitProjects#sideBarGit"]
    },

    { "before": ["leader", "p"], "commands": ["editor.action.formatDocument"] },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    }
  ],
  "vim.visualModeKeyBindings": [
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },

    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["<C-l>"],
      "commands": [
        "acceptSelectedSuggestion",
        "editor.action.inlineSuggest.commit"
      ]
    }
  ],

  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.settings.applyToAllProfiles": ["notebook.formatOnSave.enabled"],

  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.defaultProfile.linux": "zsh",

  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "go": false
  },

  "find-it-faster.general.showMaximizedTerminal": true,

  "projectManager.git.baseFolders": ["$home/repos"],
  "projectManager.sortList": "Recent",

  "breadcrumbs.enabled": false,
  "interactiveWindow.executeWithShiftEnter": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "files.autoSave": "afterDelay"
}
